<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>AuthData Records</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1>AuthData Records</h1>
    <form method="get" action="/authdata">
        <input type="text" name="search" value="<%= searchQuery %>" placeholder="Search...">
        <button type="submit">Search</button>
    </form>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Client ID</th>
                <th>User ID</th>
                <th>Sensor Type</th>
                <th>Data Type</th>
                <th>Result</th>
                <th>Retry Count</th>
                <th>Authenticated At</th>
                <th>Type</th>
                <th>Silhouette</th>
                <th>Name</th>
                <th>Location</th>
                <th>FAR Achieved</th>
                <th>Synced</th>
                <th>Client App ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% authdata.forEach(record => { %>
                <tr>
                    <td><%= record._id %></td>
                    <td><%= record.client_id %></td>
                    <td><%= record.user_id %></td>
                    <td><%= record.sensortype %></td>
                    <td><%= record.datatype %></td>
                    <td><%= record.result %></td>
                    <td><%= record.retryCount %></td>
                    <td><%= record.authenticatedAt ? record.authenticatedAt.toLocaleString() : '' %></td>
                    <td><%= record.type %></td>
                    <td><%= record.silhouette || '' %></td>
                    <td><%= record.name || '' %></td>
                    <td><%= record.location || '' %></td>
                    <td><%= record.farAchieved %></td>
                    <td><%= record.synced %></td>
                    <td><%= record.client_app_id || '' %></td>
                    <td>
                        <button onclick="deleteRecord('<%= record._id %>')">Delete</button>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <div>
        <% if (currentPage > 1) { %>
            <a href="/authdata?page=<%= currentPage - 1 %>&search=<%= searchQuery %>">Previous</a>
        <% } %>
        <% if (currentPage < totalPages) { %>
            <a href="/authdata?page=<%= currentPage + 1 %>&search=<%= searchQuery %>">Next</a>
        <% } %>
    </div>
    <script>
        function deleteRecord(id) {
            if (confirm('Are you sure you want to delete this record?')) {
                $.ajax({
                    url: '/authdata/' + id,
                    type: 'DELETE',
                    success: function(result) {
                        alert('Record deleted successfully');
                        location.reload();
                    },
                    error: function(err) {
                        alert('Error deleting record: ' + err.responseText);
                    }
                });
            }
        }
    </script>
</body>
</html>
